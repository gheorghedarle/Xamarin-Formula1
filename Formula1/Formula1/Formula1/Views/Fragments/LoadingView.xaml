<?xml version="1.0" encoding="utf-8" ?>
<StackLayout
    x:Class="Formula1.Views.Fragments.LoadingView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="Transparent"
    HorizontalOptions="Center"
    VerticalOptions="Center">
    <ActivityIndicator IsRunning="True" Color="{AppThemeBinding Light={StaticResource LightPrimaryTextColor}, Dark={StaticResource DarkPrimaryTextColor}}" />
    <Label
        HorizontalOptions="Center"
        Style="{StaticResource CaptionFontSize_ExoRegular}"
        Text="Loading..."
        TextColor="{AppThemeBinding Light={StaticResource LightSecondaryTextColor},
                                    Dark={StaticResource DarkSecondaryTextColor}}" />
</StackLayout>