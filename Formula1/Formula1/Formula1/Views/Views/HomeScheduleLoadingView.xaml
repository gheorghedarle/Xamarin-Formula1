<?xml version="1.0" encoding="utf-8" ?>
<StackLayout
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Formula1.Controls"
    x:Class="Formula1.Views.Views.HomeScheduleLoadingView"
    Padding="0, 0, 0, 5">
    <Frame
        BackgroundColor="{AppThemeBinding Light={StaticResource LightCardBackgroundColor}, Dark={StaticResource DarkCardBackgroundColor}}"
        CornerRadius="20"
        Margin="5, 0"
        Padding="10"
        HeightRequest="85">
        <Grid
            RowDefinitions="Auto, Auto, Auto"
            ColumnDefinitions="Auto, Auto"
            RowSpacing="5"
            Margin="5"
            VerticalOptions="Center">
            <controls:SkeletonView
                Grid.Row="0"
                Grid.RowSpan="3"
                Grid.Column="0"
                HeightRequest="40"
                WidthRequest="40"
                CornerRadius="20"
                HorizontalOptions="Center"
                VerticalOptions="Center"        
                BackgroundColor="{AppThemeBinding Light={StaticResource LightPageBackgroundColor}, Dark={StaticResource DarkPageBackgroundColor}}"></controls:SkeletonView>
            <controls:SkeletonView
                Grid.Row="0"
                Grid.Column="1"
                HeightRequest="10"
                WidthRequest="50"
                CornerRadius="10"
                Margin="3, 0, 0, 0"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                BackgroundColor="{StaticResource AccentColor}"></controls:SkeletonView>
            <controls:SkeletonView
                Grid.Row="1"
                Grid.Column="1"
                HeightRequest="15"
                CornerRadius="15"
                Margin="3, 0, 0, 0"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                BackgroundColor="{AppThemeBinding Light={StaticResource LightPageBackgroundColor}, Dark={StaticResource DarkPageBackgroundColor}}"></controls:SkeletonView>
            <controls:SkeletonView
                Grid.Row="2"
                Grid.Column="1"
                HeightRequest="15"
                CornerRadius="15"
                Margin="3, 0, 0, 0"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                BackgroundColor="{AppThemeBinding Light={StaticResource LightPageBackgroundColor}, Dark={StaticResource DarkPageBackgroundColor}}"></controls:SkeletonView>
        </Grid>
    </Frame>
</StackLayout>
