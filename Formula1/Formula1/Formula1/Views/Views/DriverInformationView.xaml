<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:templates="clr-namespace:Formula1.Views.Templates"
             x:Class="Formula1.Views.Views.DriverInformationView"
             Spacing="0">
    <templates:InformationDateOfBirthTemplate
        Label="Date of birth"
        DateOfBirth="{Binding DriverInformations.DateOfBirth}"
        Age="{Binding DriverInformations.Age}"></templates:InformationDateOfBirthTemplate>
    <templates:InformationTemplate
        Label="Place of birth"
        Value="{Binding DriverInformations.PlaceOfBirth}"></templates:InformationTemplate>
    <templates:InformationTemplate
        Label="Country"
        Value="{Binding DriverInformations.Country}"></templates:InformationTemplate>
    <templates:InformationTemplate
        IsVisible="{Binding DriverInformations.WorldChampionships, Converter={xct:NotEqualConverter}, ConverterParameter='N/A'}"
        Label="World Championships"
        Value="{Binding DriverInformations.WorldChampionships}"></templates:InformationTemplate>
    <Grid
        ColumnDefinitions="*, *, *">
        <templates:InformationTemplate
            Grid.Column="0"
            Label="Grands Prix"
            Value="{Binding DriverInformations.GrandsPrixEntered}"></templates:InformationTemplate>
        <templates:InformationTemplate
            Grid.Column="1"
            Label="Podiums"
            Value="{Binding DriverInformations.Podiums}"></templates:InformationTemplate>
        <templates:InformationTemplate
            Grid.Column="2"
            Label="Points"
            Value="{Binding DriverInformations.Points}"></templates:InformationTemplate>
    </Grid>
    <Grid
        ColumnDefinitions="*, *">
        <templates:InformationTemplate
            Grid.Column="0"
            Label="Highest race finish"
            Value="{Binding DriverInformations.HighestRaceFinish}"></templates:InformationTemplate>
        <templates:InformationTemplate
            Grid.Column="1"
            Label="Highest grid position"
            Value="{Binding DriverInformations.HighestGridPosition}"></templates:InformationTemplate>
    </Grid>
</StackLayout>