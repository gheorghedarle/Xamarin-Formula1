<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="Formula1.Views.Views.DriverRaceResultsLoadingView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Formula1.Controls"
    Padding="20,5"
    ColumnDefinitions="100, *, Auto"
    RowDefinitions="Auto, Auto"
    RowSpacing="5">
    <controls:SkeletonView
        Grid.Row="0"
        Grid.Column="0"
        BackgroundColor="{StaticResource AccentColor}"
        CornerRadius="5"
        HeightRequest="10"
        HorizontalOptions="Start"
        VerticalOptions="Center"
        WidthRequest="50" />
    <controls:SkeletonView
        Grid.Row="1"
        Grid.Column="0"
        BackgroundColor="{AppThemeBinding Light={StaticResource LightCardBackgroundColor},
                                          Dark={StaticResource DarkCardBackgroundColor}}"
        CornerRadius="15"
        HeightRequest="15"
        HorizontalOptions="Start"
        VerticalOptions="Center" />
    <controls:SkeletonView
        Grid.Row="0"
        Grid.RowSpan="2"
        Grid.Column="1"
        BackgroundColor="{AppThemeBinding Light={StaticResource LightCardBackgroundColor},
                                          Dark={StaticResource DarkCardBackgroundColor}}"
        CornerRadius="15"
        HeightRequest="15"
        HorizontalOptions="Start"
        VerticalOptions="Center"
        WidthRequest="50" />
    <controls:SkeletonView
        Grid.Row="0"
        Grid.Column="2"
        BackgroundColor="{AppThemeBinding Light={StaticResource LightCardBackgroundColor},
                                          Dark={StaticResource DarkCardBackgroundColor}}"
        CornerRadius="15"
        HeightRequest="15"
        HorizontalOptions="End"
        VerticalOptions="Center"
        WidthRequest="50" />
    <controls:SkeletonView
        Grid.Row="1"
        Grid.Column="2"
        BackgroundColor="{AppThemeBinding Light={StaticResource LightCardBackgroundColor},
                                          Dark={StaticResource DarkCardBackgroundColor}}"
        CornerRadius="15"
        HeightRequest="15"
        HorizontalOptions="End"
        VerticalOptions="Center"
        WidthRequest="75" />
</Grid>
