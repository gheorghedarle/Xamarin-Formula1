<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Formula1.Views.Templates.InformationLapRecordTemplate"
             x:Name="this">
    <StackLayout
        BindingContext="{x:Reference this}"
        Spacing="0">
        <Label
            Text="{Binding Label}"
            Style="{StaticResource CaptionFontSize_ExoRegular}"/>
        <Label
            Text="{Binding Value}"
            Style="{StaticResource Subtitle1FontSize_ExoBold}"/>
        <Label
            Text="{Binding SubLabel}"
            Style="{StaticResource Body2FontSize_ExoRegular}"/>
    </StackLayout>
</StackLayout>