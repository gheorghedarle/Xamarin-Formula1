<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:prism="http://prismlibrary.com"
      x:Class="Formula1.Views.TabViews.ScheduleView"
      prism:ViewModelLocator.AutowireViewModel="True"
      NavigationPage.HasNavigationBar="False">
    <StackLayout>
        <Label 
            Text="{Binding Title}"
            Style="{StaticResource Headline3_ExoBold}"
            TextColor="{StaticResource AccentColor}"
            Margin="15, 10, 0, 10"/>
        <CollectionView
            x:Name="circuitsList"
            ItemsSource="{Binding Schedule}"
            Margin="0, 0, 0, 20">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        RowDefinitions="Auto, Auto, Auto"
                        ColumnDefinitions="50, *, Auto"
                        Padding="15, 10, 15, 10"
                        RowSpacing="0">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Path=BindingContext.CircuitDetailsCommand, Source={x:Reference circuitsList}}"
                                CommandParameter="{Binding .}"></TapGestureRecognizer>
                        </Grid.GestureRecognizers>
                        <Image
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Grid.Column="0"
                            Source="{Binding Circuit.Location.Flag}"
                            WidthRequest="40"
                            HeightRequest="40"
                            Aspect="AspectFill"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                            <Image.Clip>
                                <EllipseGeometry
                                    Center="20,20"
                                    RadiusX="20"
                                    RadiusY="20"/>
                            </Image.Clip>
                        </Image>
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="{Binding Round, StringFormat='Round {0}'}"
                            Style="{StaticResource CaptionFontSize_ExoRegular}"
                            TextColor="{StaticResource AccentColor}"
                            VerticalOptions="Center"></Label>
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding Circuit.Location.Country}"
                            Style="{StaticResource Body1FontSize_ExoBold}"
                            VerticalOptions="Center"></Label>
                        <Label
                            Grid.Row="2"
                            Grid.Column="1"
                            Text="{Binding Circuit.CircuitName}"
                            Style="{StaticResource Body2FontSize_ExoRegular}"
                            VerticalOptions="Center"></Label>
                        <Label
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Grid.Column="2"
                            Text="{Binding Date, StringFormat='{0:dd MMM yyyy}'}"
                            Style="{StaticResource CaptionFontSize_ExoRegular}"
                            HorizontalOptions="End"
                            VerticalOptions="Center"></Label>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentView>