<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:prism="http://prismlibrary.com"
      x:Class="Formula1.Views.TabViews.TeamsView"
      prism:ViewModelLocator.AutowireViewModel="True"
      NavigationPage.HasNavigationBar="False">
    <StackLayout>
        <Label 
            Margin="15, 10, 0, 5">
            <Label.FormattedText>
                <FormattedString>
                    <Span
                        Text="{Binding Title}"
                        Style="{StaticResource Headline3_ExoBold}"
                        TextColor="{StaticResource AccentColor}"></Span>
                    <Span
                        Text=" Stadings"
                        Style="{StaticResource Headline3_ExoRegular}"></Span>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <CollectionView
            ItemsSource="{Binding TeamsList}"
            Margin="0, 0, 0, 20">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        ColumnDefinitions="30, *, Auto"
                        Padding="15, 10, 15, 10"
                        RowSpacing="2">
                        <Label
                            Grid.Column="0"
                            Text="{Binding Position}"
                            Style="{StaticResource Body1FontSize_ExoRegular}"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"></Label>
                        <Label
                            Grid.Column="1"
                            Text="{Binding Constructor.Name}"
                            Style="{StaticResource Subtitle1FontSize_ExoBold}"></Label>
                        <Label
                            Grid.Column="2"
                            VerticalOptions="CenterAndExpand">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span
                                        Text="{Binding Points}"
                                        Style="{StaticResource Body1FontSize_ExoBold}"></Span>
                                    <Span
                                        Text=" pts"
                                        Style="{StaticResource Body1FontSize_ExoRegular}"></Span>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentView>